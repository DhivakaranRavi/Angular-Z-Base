{
  "name": "angular-z-base",
  "version": "1.0.1",
  "description": "A PWA Angular Base Application",
  "scripts": {
    "precommit": "lint-staged",
    "ngsw-config": "node_modules/.bin/ngsw-config dist src/ngsw-config.json",
    "ngsw-copy": "cp node_modules/@angular/service-worker/ngsw-worker.js dist/",
    "manifest-copy": "cp src/manifest.json dist/",
    "start": "webpack-dev-server  --config ./config/webpack.dev.js --open",
    "build": "webpack --config ./config/webpack.prod.js && npm run ngsw-config && npm run ngsw-copy && npm run manifest-copy",
    "format": "prettier **/**/*.ts --ignore-path ./.prettierignore --write",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:ci": "jest --runInBand",
    "test:coverage": "jest --coverage"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/DhivakaranRavi/Angular-Z-Base.git"
  },
  "author": "Dhivakaran",
  "license": "ISC",
  "jest": {
    "preset": "jest-preset-angular",
    "roots": [
      "src"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/src/setup-jest.ts"
    ]
  },
  "lint-staged": {
    "*.{ts,json}": [
      "npm run format",
      "git add"
    ]
  },
  "dependencies": {
    "@angular/animations": "^7.2.3",
    "@angular/common": "^7.2.1",
    "@angular/compiler": "^7.2.1",
    "@angular/core": "^7.2.1",
    "@angular/forms": "^7.2.2",
    "@angular/platform-browser": "^7.2.1",
    "@angular/platform-browser-dynamic": "^7.2.1",
    "@angular/router": "^7.2.1",
    "@angular/service-worker": "^7.2.4",
    "core-js": "^2.6.3",
    "rxjs": "^6.3.3",
    "zone.js": "^0.8.28"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^0.13.0",
    "@angular/compiler-cli": "^7.2.1",
    "@ngtools/webpack": "^7.2.2",
    "@types/jest": "^24.0.0",
    "circular-dependency-plugin": "^5.0.2",
    "compression-webpack-plugin": "^2.0.0",
    "copy-webpack-plugin": "^4.6.0",
    "css-loader": "^2.1.0",
    "file-loader": "^3.0.1",
    "html-loader": "^0.5.5",
    "husky": "^1.3.1",
    "jest": "^24.0.0",
    "jest-preset-angular": "^6.0.2",
    "lint-staged": "^8.1.3",
    "mini-css-extract-plugin": "^0.5.0",
    "prettier": "^1.16.4",
    "raw-loader": "^1.0.0",
    "style-loader": "^0.23.1",
    "to-string-loader": "^1.1.5",
    "typescript": "3.1.6",
    "uglifyjs-webpack-plugin": "^2.1.1",
    "url-loader": "^1.1.2",
    "webpack": "^4.28.4",
    "webpack-cli": "^3.2.1",
    "webpack-dev-server": "^3.1.14",
    "webpack-merge": "^4.2.1"
  }
}
